{
  "manifest_version": 3,
  "name": "Civitai Manager Extension",
  "version": "1.0",
  "permissions": ["http://*/", "https://*/", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}